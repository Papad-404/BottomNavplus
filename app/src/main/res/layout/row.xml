<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_penjelas"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ihram_penjelasan" />

        <TextView
            android:id="@+id/text_penjelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@id/image_penjelas"
            android:layout_toRightOf="@id/image_penjelas"
            android:paddingTop="20dp"
            android:paddingLeft="15dp"
            android:text="@string/ihram_penjelasan"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>